<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.theolympian.alu.ProfilePersonalFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="First Name"
                android:drawableStart="@drawable/ic_firstname"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Last Name"
                android:drawableStart="@drawable/ic_lastname"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Batch"
                android:drawableStart="@drawable/ic_batch"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="YYYY"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Department"
                android:drawableStart="@drawable/ic_department"
                android:backgroundTint="@color/grey"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Computer Science ans Engineering"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Course"
                android:drawableStart="@drawable/ic_course"
                android:backgroundTint="@color/grey"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Email"
                android:drawableStart="@drawable/ic_email"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Mobile"
                android:drawableStart="@drawable/ic_mobile"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text=""
                android:textSize="15sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_rounded"
            android:text="Save"
            android:layout_margin="25dp"/>
    </LinearLayout>
</ScrollView>